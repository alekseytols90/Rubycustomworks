<%= render "settings_nav" %>
<div class="tab col-md-12 new-setting">
<%= form_for @setting, class: 'form-horizontal' do |f| %>
<fieldset>
<div id="setting-name" class="form-group">
  <%= f.label :var, 'Setting Name:', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :var, class: 'form-control' %>
    <span id="helpBlock1" class="help-block">Enter a string, to name the new setting.</span>
  </div>
</div>
<div id="setting-value" class="form-group">
  <%= f.label :value, 'Setting Value:', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_area :value, class: 'form-control' %>
    <span id="helpBlock2" class="help-block">Enter a string, a Ruby array, or a Hash.
      For example:</span>
      <span id="helpBlock3" class="help-block">An Array: ['one', 'two', 'three'],
      A Hash: { 'key1': 'Value 1', 'second key': 'Value 2' }</span>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= button_tag 'Add Setting', class: 'btn btn-default' %>
  </div>
</div>
</fieldset>
<% end %>
</div>
