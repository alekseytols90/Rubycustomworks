<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= Global.config.title %></title>
	
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'application', media: 'screen, projection', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag    'print', media: 'print', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

  <%= render 'layouts/favicon' %>
	
	<%= yield :head %>

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
	  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
	<![endif]-->
  <!-- MathJax to display math -->
  <script type="text/javascript"
          src="//cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML">
  </script>
  <script type="text/x-mathjax-config">
      MathJax.Hub.Config({
        TeX: { equationNumbers: { autoNumber: "AMS" } }
      });
  </script>
</head>
<body class="<%= controller_name %> <%= action_name %>">
<div id="wrapper" class="fluid-container">

  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div id="application-heading">
      <%= link_to image_tag(Global.config.logo_file), root_path, {:id => 'logo-heading'} %>
      </div>
    </div>
    <!-- /.navbar-header -->

    <ul class="nav navbar-top-links navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <%= fa_icon 'user fw' %> <%= "#{current_user.person.name}" if user_signed_in? %> <%= fa_icon 'caret-down' %>
        </a>
        <ul class="dropdown-menu dropdown-user">
          <% if user_signed_in? %>
          <li><%= link_to ' Change Password', edit_user_registration_path, class: 'fa fa-gear fw' %></li>
          <li class="divider"></li>
          <li><%= link_to " Sign Out", sign_out_path, method: :delete, class: 'fa fa-sign-out fw' %></li>
          <% else %>
              <% if request.path =~ /sign_in/ %>
              <li><%= link_to " Sign Up", new_registration_path(resource_name), class: 'fa fa-user fw' %>
              <% else %>
              <li><%= link_to " Sign In", sign_in_path, class: 'fa fa-sign-in fw' %></li>
              <% end %>
          <% end %>
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->

    <div class="row flash-messages">
    <%= render 'layouts/flashes' %>
    </div>

    <% if user_signed_in? %>
      <!-- Sidebar Navigation -->
      <%= render 'layouts/sidebar' %>
    <% end %>
  </nav>

  <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <% if @event && !@event.name.nil? %>
            <header>
              <h3 class="page-header"><%= link_to @event.name, @event %></h3>
              <div class="page-header-subtitle">
                <%= image_tag("flags/#{@event.country}.png", height: 22) %>
                <h4><%= @event.dates('long') %></h4>
              </div>
            </header>
        <% else %>
            <% if user_signed_in? && @heading %>
                <h1 class="page-header"><%= @heading %></h1>
            <% end %>
        <% end %>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
      <!-- xs <= 768px, sm >= 768px, md >= 992px, lg >= 1200px -->
      <div class="col-lg-12">
        <%= yield %>
      </div>
    </div>
    <!-- /.row -->

  </div>
  <!-- /#page-wrapper -->


  <%= render 'layouts/footer' %>
</div>
<!-- /#wrapper -->

</body>
</html>
