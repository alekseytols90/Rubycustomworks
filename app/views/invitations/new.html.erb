<h1>Event Invitations</h1>
<%= form_for @invitation, url: { action: 'create' },
                         html: {  class: 'form',
                                   role: 'form' } do |f| %>
<fieldset>
<div class="row">
  <div class='col-md-6'>
    <div class="form-group">
      <p>
      <%= f.label 'Select the event you were invited to:' %><br />
      <%= select_tag('membership[event]', options_for_select(future_events_options),
                     include_blank: true, class: 'form-control') %>
     </p>
    </div>
  </div>
</div>

<div class="row">
  <div class='col-md-6'>
    <div class="form-group">
      <p>
      <%= f.label 'Enter your email address:' %><br />
      <%= email_field 'membership[person]', :email, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="row">
  <div class='col-md-6'>
    <div class="form-group">
      <%= f.submit 'Request Another Invitation' %>
    </div>
  </div>
</div>
</fieldset>
<% end %>
